                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="More than half the days"
                android:id="@+id/radioButton3_3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="Nearly every day"
                android:id="@+id/radioButton3_4"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question4"
            android:text="Feeling tired or having little energy"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/radioGroup4">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="Not at all"
                android:id="@+id/radioButton4_1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="Several days"
                android:id="@+id/radioButton4_2"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="More than half the days"
                android:id="@+id/radioButton4_3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="Nearly every day"
                android:id="@+id/radioButton4_4"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
