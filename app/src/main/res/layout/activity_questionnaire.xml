                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="More than half the days"
                android:id="@+id/radioButton8_3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:text="Nearly every day"
                android:id="@+id/radioButton8_4"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question9"
            android:text="Thoughts that you would better off dead, or of hurting yourself"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/radioGroup9">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
