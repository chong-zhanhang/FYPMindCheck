<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mindchecklogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindCheckDataCollectionApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.theme.AppointmentsRescheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light"/>
        <activity
            android:name=".ui.theme.AppointmentsNewActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.TherapistViewPatientProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.TherapistMainActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.TherapistRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.TherapistLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.MapActivity"
            android:exported="false"
            android:parentActivityName=".ui.theme.RealMainActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.LocationActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA29E0Ugg_5aGCzrA3F19QgXdwBROKjA5U" />

        <activity
            android:name=".ui.theme.VideoPlayerActivity"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.AppointmentActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.MoreInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <receiver
            android:name=".ui.theme.QuestionnaireNotificationPublisher"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".ui.theme.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.theme.EditProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.ProfileActivity"
            android:exported="false"
            android:label="Profile"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.QuestionnaireActivity"
            android:exported="false"
            android:label="PHQ-9 Questionnaire"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.RealMainActivity"
            android:exported="false"
            android:label="MindCheck"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.theme.StartActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".SampleKeyboardService"
            android:directBootAware="true"
            android:exported="true"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/sample_input_method" />
        </service>
        <service
            android:name=".ui.theme.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>